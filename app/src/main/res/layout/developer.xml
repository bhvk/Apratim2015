<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">



    <ImageView
        android:id="@+id/id1"
        android:layout_width="120dp"
        android:layout_height="160dp"
        android:paddingTop="10dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/harsha"
        android:paddingLeft="10dp"
            />

        <ImageView
            android:id="@+id/id2"
            android:layout_width="120dp"
            android:layout_height="170dp"
            android:paddingTop="10dp"
            android:layout_marginTop="240dp"
            android:src="@drawable/bhavuk"
            android:paddingLeft="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Harsha"
        android:textSize="30dp"
        android:id="@+id/text1"
        android:textColor="#000000"
        android:layout_marginLeft="40dp"
        android:layout_toRightOf="@+id/id1"
        android:paddingTop="40dp"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bhavuk Sharma"
        android:textSize="30dp"
        android:id="@+id/text2"
        android:textColor="#000000"
        android:layout_marginLeft="40dp"
        android:layout_toRightOf="@+id/id2"
        android:paddingTop="40dp"
        android:layout_marginTop="250dp"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/imageButton1"
        android:layout_below="@+id/text1"
        android:background="@drawable/fb_icon"
        android:layout_toRightOf="@+id/id1"

        android:layout_toEndOf="@+id/id1" />


</RelativeLayout>


